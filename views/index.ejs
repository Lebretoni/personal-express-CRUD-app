<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.css">
<link rel="stylesheet" href="styles.css">
</head>


  <title>MY APP</title>

</head>
<body>
  <h1>Super-Hero Quotes</h1>
  <section class="size" >
  <section >
  <span>Instructions</span>
  </section>
  <section>
  <span>Press Heart= you love the quote!</span>
</section>
<section>
<span>Press Trash Can= delete the quote!</span>
</section>
</section>

<section class="size1">
<span>Quotes List</span>
</section>


  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <span><%= messages[i].thumbUp %></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
      <span><i class="fas fa-heart"></i></span>
      <span class="hide"><i class="fas fa-thumbs-down"></i></span>

    </li>
  <% } %>
  </ul>

  <form action="/messages" method="POST">
    <input type="text" placeholder="Hero" name="name">
    <input type="text" placeholder="quote" name="msg">
    <button type="submit">Submit</button>
  </form>
  <div>
  <h2></h2>

</div>
<script src="main.js"></script>
</body>
</html>
